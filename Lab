--// GXScript Hub — Green Tech UI (no fake loading)
--// Made for: Pets/Eggs/Seeds spawner + player & utility tools

-- Clean previous
pcall(function()
    if game.CoreGui:FindFirstChild("GXScriptHub") then
        game.CoreGui.GXScriptHub:Destroy()
    end
end)

-- Services
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui")

local LP = Players.LocalPlayer

-- THEME
local ACCENT = Color3.fromRGB(40, 200, 80)        -- neon-ish green
local ACCENT_DARK = Color3.fromRGB(30, 120, 55)   -- darker green
local BG = Color3.fromRGB(20, 20, 20)
local BG_SOFT = Color3.fromRGB(28, 28, 28)
local TEXT = Color3.fromRGB(230, 250, 230)

-- Helpers
local function notify(t, d)
    pcall(function()
        StarterGui:SetCore("SendNotification", {Title="GXScript", Text=t, Duration=d or 3})
    end)
end

local function addCorner(i, r) local c = Instance.new("UICorner"); c.CornerRadius = UDim.new(0, r or 10); c.Parent = i end
local function addStroke(i, th, col, trans)
    local s = Instance.new("UIStroke")
    s.Thickness = th or 1
    s.Color = col or Color3.fromRGB(60,60,60)
    s.Transparency = trans or 0.2
    s.Parent = i
    return s
end

-- ScreenGui
local SG = Instance.new("ScreenGui")
SG.Name = "GXScriptHub"
SG.ResetOnSpawn = false
SG.IgnoreGuiInset = true
SG.Parent = game.CoreGui

-- Main window
local Main = Instance.new("Frame")
Main.Size = UDim2.fromOffset(520, 320)
Main.Position = UDim2.new(0.5, -260, 0.5, -160)
Main.BackgroundColor3 = BG
Main.Active = true
Main.Draggable = true
Main.Parent = SG
addCorner(Main, 14)
addStroke(Main, 1.5, Color3.fromRGB(70,70,70), 0.35)

-- Title bar
local Top = Instance.new("Frame")
Top.Size = UDim2.new(1, 0, 0, 48)
Top.BackgroundColor3 = BG_SOFT
Top.Parent = Main
addCorner(Top, 14)
addStroke(Top, 1, Color3.fromRGB(80,80,80), 0.25)

-- Logo + Title
local Logo = Instance.new("Frame")
Logo.Size = UDim2.fromOffset(36, 36)
Logo.Position = UDim2.new(0, 10, 0, 6)
Logo.BackgroundColor3 = ACCENT_DARK
Logo.Parent = Top
addCorner(Logo, 8)

local GX = Instance.new("TextLabel")
GX.Size = UDim2.fromScale(1, 1)
GX.BackgroundTransparency = 1
GX.Text = "GX"
GX.Font = Enum.Font.GothamBlack
GX.TextSize = 20
GX.TextColor3 = TEXT
GX.Parent = Logo

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -120, 1, 0)
Title.Position = UDim2.new(0, 56, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "GXScript Hub"
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Font = Enum.Font.GothamBold
Title.TextSize = 20
Title.TextColor3 = TEXT
Title.Parent = Top

-- Close
local Close = Instance.new("TextButton")
Close.Size = UDim2.fromOffset(36, 36)
Close.Position = UDim2.new(1, -46, 0, 6)
Close.BackgroundColor3 = Color3.fromRGB(70, 30, 30)
Close.Text = "✕"
Close.TextColor3 = Color3.fromRGB(255, 160, 160)
