    local Spawner = loadstring(game:HttpGet("https://gitlab.com/darkiedarkie/dark/-/raw/main/Spawner.lua"))()
    local ok, err = pcall(function()
        Spawner.Load()
    end)
    if ok then
        notify("Spawner loaded.")
    else
        notify("Spawner error: "..tostring(err), 5)
    end
end)

