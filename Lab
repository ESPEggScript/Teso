addStroke(Close, 1, Color3.fromRGB(120,60,60), 0.35)
Close.MouseButton1Click:Connect(function() SG:Destroy() end)

-- Tab bar
local Tabs = Instance.new("Frame")
Tabs.Size = UDim2.new(1, -20, 0, 40)
Tabs.Position = UDim2.new(0, 10, 0, 56)
Tabs.BackgroundTransparency = 1
Tabs.Parent = Main

local function makeTabButton(txt, xIndex)
    local b = Instance.new("TextButton")
    b.Size = UDim2.fromOffset(120, 36)
    b.Position = UDim2.new(0, (xIndex-1) * (120 + 8), 0, 2)
    b.BackgroundColor3 = ACCENT_DARK
    b.Text = txt
    b.TextColor3 = TEXT
    b.Font = Enum.Font.GothamBold
    b.TextSize = 14
    b.Parent = Tabs
    addCorner(b, 10)
    addStroke(b, 1, Color3.fromRGB(90,120,90), 0.25)
    b.MouseEnter:Connect(function() b.BackgroundColor3 = ACCENT end)
    b.MouseLeave:Connect(function() b.BackgroundColor3 = ACCENT_DARK end)
    return b
end

-- Content container
local Pages = Instance.new("Frame")
Pages.Size = UDim2.new(1, -20, 1, -110)
Pages.Position = UDim2.new(0, 10, 0, 100)
Pages.BackgroundColor3 = BG_SOFT
Pages.Parent = Main
addCorner(Pages, 12)

local function makePage()
    local p = Instance.new("Frame")
    p.Size = UDim2.fromScale(1,1)
    p.BackgroundTransparency = 1
    p.Visible = false
    p.Parent = Pages
    return p
end

-- Create pages
local Page_Main = makePage()
local Page_Player = makePage()
local Page_Util = makePage()
local Page_Settings = makePage()

-- Tab buttons
local Tab1 = makeTabButton("Main", 1)
local Tab2 = makeTabButton("Player", 2)
local Tab3 = makeTabButton("Utilities", 3)
local Tab4 = makeTabButton("Settings", 4)

local function showPage(p)
    for _,f in ipairs(Pages:GetChildren()) do
        if f:IsA("Frame") then f.Visible = false end
    end
    p.Visible = true
end
showPage(Page_Main)

Tab1.MouseButton1Click:Connect(function() showPage(Page_Main) end)
Tab2.MouseButton1Click:Connect(function() showPage(Page_Player) end)
Tab3.MouseButton1Click:Connect(function() showPage(Page_Util) end)
Tab4.MouseButton1Click:Connect(function() showPage(Page_Settings) end)

