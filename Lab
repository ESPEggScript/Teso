local function makeGroup(parent, title, y)
    local box = Instance.new("Frame")
    box.Size = UDim2.new(1, -28, 0, 96)
    box.Position = UDim2.new(0, 14, 0, y)
    box.BackgroundColor3 = BG
    box.Parent = parent
    addCorner(box, 10)
    addStroke(box, 1, Color3.fromRGB(70,70,70), 0.25)

    local lbl = Instance.new("TextLabel")
    lbl.BackgroundTransparency = 1
    lbl.Size = UDim2.new(1, -16, 0, 22)
    lbl.Position = UDim2.new(0, 8, 0, 6)
    lbl.Font = Enum.Font.GothamBold
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.TextSize = 14
    lbl.TextColor3 = TEXT
    lbl.Text = title
    lbl.Parent = box

    return box
end

-- Walk/Jump
local statsBox = makeGroup(Page_Player, "Character Stats", 12)

local WSBox = Instance.new("TextBox")
WSBox.Size = UDim2.new(0, 90, 0, 28)
WSBox.Position = UDim2.new(0, 8, 0, 36)
WSBox.BackgroundColor3 = BG_SOFT
WSBox.Text = "16"
WSBox.PlaceholderText = "WalkSpeed"
WSBox.TextColor3 = TEXT
WSBox.Font = Enum.Font.Gotham
WSBox.TextSize = 14
WSBox.Parent = statsBox
addCorner(WSBox, 8)

local JPBox = WSBox:Clone()
JPBox.Position = UDim2.new(0, 108, 0, 36)
JPBox.Text = "50"
JPBox.PlaceholderText = "JumpPower"
JPBox.Parent = statsBox

local ApplyStats = Instance.new("TextButton")
ApplyStats.Size = UDim2.new(0, 100, 0, 28)
ApplyStats.Position = UDim2.new(0, 208, 0, 36)
ApplyStats.BackgroundColor3 = ACCENT_DARK
ApplyStats.Text = "Apply"
ApplyStats.TextColor3 = TEXT
ApplyStats.Font = Enum.Font.GothamBold
ApplyStats.TextSize = 14
ApplyStats.Parent = statsBox
addCorner(ApplyStats, 8)
addStroke(ApplyStats, 1, Color3.fromRGB(90,120,90), 0.25)
ApplyStats.MouseEnter:Connect(function() ApplyStats.BackgroundColor3 = ACCENT end)
ApplyStats.MouseLeave:Connect(function() ApplyStats.BackgroundColor3 = ACCENT_DARK end)

ApplyStats.MouseButton1Click:Connect(function()
    local char = LP.Character or LP.CharacterAdded:Wait()
    local hum = char:FindFirstChildWhichIsA("Humanoid")
    if hum then
        local ws = tonumber(WSBox.Text) or 16
        local jp = tonumber(JPBox.Text) or 50
        hum.WalkSpeed = ws
        hum.JumpPower = jp
        hum.UseJumpPower = true
        notify(("WS=%d, JP=%d applied."):format(ws, jp))
    else
        notify("No humanoid found.")
    end
end)

-- Toggles
local toggleBox = makeGroup(Page_Player, "Toggles", 122)
toggleBox.Size = UDim2.new(1, -28, 0, 132)

local function makeToggle(parent, label, col, x, y)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 150, 0, 30)
    btn.Position = UDim2.new(0, x, 0, y)
    btn.BackgroundColor3 = col
    btn.Text = label..": OFF"
    btn.TextColor3 = TEXT
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 13
    btn.Parent = parent
    addCorner(btn, 8)
    addStroke(btn, 1, Color3.fromRGB(90,120,90), 0.25)
    local state = false
    btn.MouseButton1Click:Connect(function()
        state = not state
        btn.Text = label..": "..(state and "ON" or "OFF")
        btn.BackgroundColor3 = state and ACCENT or col
        btn:SetAttribute("State", state)
    end)
    return btn
end

-- Infinite Jump
local InfJumpBtn = makeToggle(toggleBox, "Infinite Jump", Color3.fromRGB(60,90,60), 8, 36)
local infJumpConn
InfJumpBtn:GetAttributeChangedSignal("State"):Connect(function()
    local on = InfJumpBtn:GetAttribute("State")
    if on then
        infJumpConn = UIS.JumpRequest:Connect(function()
            local char = LP.Character
            if char and char:FindFirstChildWhichIsA("Humanoid") then
                char.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            end
        end)
    else
        if infJumpConn then infJumpConn:Disconnect() infJumpConn = nil end
    end
end)

-- Noclip
local NoclipBtn = makeToggle(toggleBox, "Noclip", Color3.fromRGB(60,90,60), 166, 36)
local noclipConn
NoclipBtn:GetAttributeChangedSignal("State"):Connect(function()
    local on = NoclipBtn:GetAttribute("State")
    if on then
        noclipConn = RunService.Stepped:Connect(function()
            local char = LP.Character
            if not char then return end
            for _,v in ipairs(char:GetDescendants()) do
                if v:IsA("BasePart") then v.CanCollide = false end
            end
        end)
    else
        if noclipConn then noclipConn:Disconnect() noclipConn = nil end
    end
end)

-- Fly (simple WASD fly)
local FlyBtn = makeToggle(toggleBox, "Fly", Color3.fromRGB(60,90,60), 8, 74)
local flyConn, flyHV, flyGY
local flySpeed = 60

local SpeedBox = Instance.new("TextBox")
SpeedBox.Size = UDim2.new(0, 70, 0, 30)
SpeedBox.Position = UDim2.new(0, 166, 0, 74)
SpeedBox.BackgroundColor3 = BG_SOFT
SpeedBox.PlaceholderText = "FlySpeed"
SpeedBox.Text = tostring(flySpeed)
SpeedBox.TextColor3 = TEXT
SpeedBox.Font = Enum.Font.Gotham
SpeedBox.TextSize = 13
SpeedBox.Parent = toggleBox
addCorner(SpeedBox, 8)

local function stopFly()
    if flyConn then flyConn:Disconnect(); flyConn = nil end
    if flyHV then flyHV:Destroy(); flyHV = nil end
    if flyGY then flyGY:Destroy(); flyGY = nil end
end

FlyBtn:GetAttributeChangedSignal("State"):Connect(function()
    local on = FlyBtn:GetAttribute("State")
    local char = LP.Character or LP.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart", 2)
    if not hrp then notify("No HRP."); return end
    if on then
        flySpeed = tonumber(SpeedBox.Text) or 60
        flyHV = Instance.new("BodyVelocity")
        flyHV.MaxForce = Vector3.new(1e5,1e5,1e5)
        flyHV.Velocity = Vector3.zero
        flyHV.Parent = hrp

        flyGY = Instance.new("BodyGyro")
        flyGY.MaxTorque = Vector3.new(1e5,1e5,1e5)
        flyGY.C = hrp.CFrame
        flyGY.Parent = hrp

        flyConn = RunService.RenderStepped:Connect(function()
            local camCF = workspace.CurrentCamera.CFrame
            local move = Vector3.new(0,0,0)
            if UIS:IsKeyDown(Enum.KeyCode.W) then move += camCF.LookVector end
            if UIS:IsKeyDown(Enum.KeyCode.S) then move -= camCF.LookVector end
            if UIS:IsKeyDown(Enum.KeyCode.A) then move -= camCF.RightVector end
            if UIS:IsKeyDown(Enum.KeyCode.D) then move += camCF.RightVector end
            if UIS:IsKeyDown(Enum.KeyCode.Space) then move += Vector3.new(0,1,0) end
            if UIS:IsKeyDown(Enum.KeyCode.LeftControl) then move -= Vector3.new(0,1,0) end
            flyHV.Velocity = move.Magnitude > 0 and move.Unit * flySpeed or Vector3.zero
            flyGY.C = workspace.CurrentCamera.CFrame
        end)
    else
        stopFly()
    end
end)

----------------------------------------------------------------
-- UTILITIES PAGE (FPS Booster)
----------------------------------------------------------------
local utilBox = makeGroup(Page_Util, "Performance", 12)
utilBox.Size = UDim2.new(1, -28, 0, 120)

local BoostBtn = Instance.new("TextButton")
BoostBtn.Size = UDim2.new(0, 160, 0, 32)
BoostBtn.Position = UDim2.new(0, 8, 0, 44)
BoostBtn.BackgroundColor3 = ACCENT_DARK
BoostBtn.Text = "Enable FPS Boost"
BoostBtn.TextColor3 = TEXT
BoostBtn.Font = Enum.Font.GothamBold
BoostBtn.TextSize = 14
BoostBtn.Parent = utilBox
addCorner(BoostBtn, 8)

local ResetBtn = BoostBtn:Clone()
ResetBtn.Position = UDim2.new(0, 176, 0, 44)
ResetBtn.Text = "Reset FPS Boost"
ResetBtn.Parent = utilBox

local boosted = false
local storedSettings = {}

local function enableFPSBoost()
    if boosted then return end
    boosted = true

    -- store + reduce
    pcall(function()
        settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
    end)

    for _,d in ipairs(workspace:GetDescendants()) do
        if d:IsA("BasePart") then
            d.Material = Enum.Material.SmoothPlastic
            d.Reflectance = 0
        elseif d:IsA("Decal") or d:IsA("Texture") then
            d.Transparency = 1
        elseif d:IsA("ParticleEmitter") or d:IsA("Trail") then
            d.Enabled = false
        elseif d:IsA("PointLight") or d:IsA("SpotLight") or d:IsA("SurfaceLight") then
            d.Enabled = false
        end
    end
    notify("FPS Boost enabled.")
end

local function resetFPSBoost()
    boosted = false
    -- Not all visuals can be fully restored without a full reload,
    -- but we’ll at least re-enable lights/particles where possible:
    for _,d in ipairs(workspace:GetDescendants()) do
        if d:IsA("ParticleEmitter") or d:IsA("Trail") then
            d.Enabled = true
        elseif d:IsA("PointLight") or d:IsA("SpotLight") or d:IsA("SurfaceLight") then
            d.Enabled = true
        end
    end
    notify("Attempted to reset visuals. (Full rejoin may be needed.)")
end

BoostBtn.MouseButton1Click:Connect(enableFPSBoost)
ResetBtn.MouseButton1Click:Connect(resetFPSBoost)

